{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('login') }}
{% endblock %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="login-form-container">
    <h1>Connectez-vous ici</h1>
    <p>Entrez vos informations pour accéder à votre compte.</p>

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post">
        <label for="username">Email</label>
        <input 
            type="email" 
            id="username" 
            name="_username" 
            value="{{ last_username }}" 
            placeholder="Entrez votre email..." 
            required 
            autofocus
        >

        <label for="password">Mot de passe</label>
        <input 
            type="password" 
            id="password" 
            name="_password" 
            placeholder="Entrez votre mot de passe..." 
            required
        >

        <div class="remember-me">
            <input type="checkbox" id="_remember_me" name="_remember_me">
            <label for="_remember_me">Se souvenir de moi</label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn-login">Se connecter</button>
    </form>

    <div class="login-links">
        <p>
            Vous avez oublié votre mot de passe ? 
            <a href="#">réinitialisez ici</a>
        </p>
        <p>
            Vous n'avez pas de compte ? 
            <a href="#">Créer votre compte ici</a>
        </p>
    </div>
</div>
{% endblock %}
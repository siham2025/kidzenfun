{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
  <div class="container" style="max-width:720px;margin:32px auto;">
    {% for flash_error in app.flashes('reset_password_error') %}
      <div class="alert" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Mot de passe oublié</h1>

    {{ form_start(requestForm, { attr: { class: 'user-form' } }) }}
      {{ form_row(requestForm.email, {
        row_attr:   { class: 'field' },
        label:      'Email',
        label_attr: { class: 'label' },
        attr:       { class: 'input', placeholder: 'vous@exemple.com' }
      }) }}

      <div class="buttons" style="margin-top:12px;">
        <button class="btn purple">Envoyer le lien</button>
        <a href="{{ path('app_login') }}" class="btn withe">Retour</a>
      </div>
    {{ form_end(requestForm) }}
  </div>
{% endblock %}
{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
{% endblock %}
{% extends 'base.html.twig' %}
{% block body %}
	<div
		class="admin-wrapper">
		{#  SIDEBAR #}
		{% include 'admin/partials/_sidebar.html.twig' %}

		<div class="admin-main-content">

			<div class="admin-header">
				<h2 class="page-title">Gérer les activités</h2>
				<a href="{{ path('home') }}" class="btn btn-outline-primary">Voir le site ⤴</a>


			</div>
			<div class="admin-actions-bar">
				<form class="search-bar" action="/recherche" method="get">
					<input type="text" placeholder="Recherche">
					<button type="submit" aria-label="Rechercher">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewbox="0 0 24 24">
							<circle cx="11" cy="11" r="8"></circle>
							<line x1="21" y1="21" x2="16.65" y2="16.65"></line>
						</svg>
					</button>
				</form>
				<a href="{{ path('admin_activity_new') }}" class="btn btn-primary">+ Ajouter une activité</a>

			</div>

			<table class="admin-table">
				<thead>
					<tr>
						<th>Titre</th>
						<th>Image</th>
						<th>Âge</th>
						<th>Thème</th>
						<th>Type</th>
						<th>Activité du jour</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for activity in activities %}
						<tr>
							<td>{{ activity.title }}</td>
							<td><img src="{{ asset('images/activities/' ~ activity.image) }}" alt="{{ activity.title }}"></td>
							<td>{{ activity.ageGroup }}</td>
							<td>{{ activity.themes[0].name }}</td>
							<td>
								{% for type in activity.activityTypes %}
									{{ type.name }}
									{% if not loop.last %},
									{% endif %}
								{% endfor %}
							</td>
							<td>
								<input type="checkbox" {% if activity.isDailyActivity %} checked {% endif %} disabled>
							</td>
							<td>
								<a href="#" class="btn btn-sm btn-outline-primary">Modifier</a>
								<a href="#" class="btn btn-sm btn-outline-danger">Supprimer</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="7">Aucune activité disponible.</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}

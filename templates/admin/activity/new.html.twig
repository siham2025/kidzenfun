{# {% extends 'base.html.twig' %} #}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
	<div class="admin-wrapper">
		{% include 'admin/partials/_sidebar.html.twig' %}

		<div class="admin-main-content">
			<div class="content-inner">
				<div class="content-header">
					<a href="{{ path('home') }}" class="logo" aria-label="Aller à l’accueil">
						<img src="{{ asset('images/logo_KZF.png') }}" alt="Kidzen&fun" class="logo_img">
					</a>
					<a href="{{ path('home') }}" class="btn withe">Voir le site ⤴</a>
				</div>

				<h1 class="page-title">Créer une activité</h1>

				{{ form_start(form, { attr:{ class:'activity-form' } }) }}
				{% include 'admin/activity/_form_fields.html.twig' with { form: form, activity: form.vars.data } %}
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}

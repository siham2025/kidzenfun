{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{# pas d’extends ici, on garde ta structure existante #}
{% block body %}
<div class="admin-wrapper">
    {# Sidebar #}
    {% include 'admin/partials/_sidebar.html.twig' %}

    {# Contenu #}
    <div class="admin-main">
        <div class="admin-content">
            <div class="content-inner">
                <div class="content-header">
                    <a class="brand" href="{{ path('admin_dashboard') }}"><i class="fas fa-sun"></i> kidzen&fun</a>
                    <a href="{{ path('home') }}" class="btn withe">Voir le site ⤴</a>
                </div>

                <h1>Tableau de bord</h1>

                <div class="dashboard-cards">
                    <div class="card">
                        <h2>{{ userCount }}</h2>
                        <p>Utilisateurs</p>
                    </div>
                    <div class="card">
                        <h2>{{ activityCount }}</h2>
                        <p>Activités</p>
                    </div>
                    <div class="card">
                        <h2>{{ themeCount }}</h2>
                        <p>Thèmes</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
